<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/question_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/question_bar_height"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q.1 Single Choice question"
                    android:textColor="@color/white"></TextView>
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/question_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="which among the following is a good example of sp2 reaction give me some examples"></TextView>
            <ImageView
                android:id="@+id/option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintLeft_toLeftOf="@id/tv_question"
                android:layout_marginTop="@dimen/option_margin_top"
                android:layout_marginLeft="@dimen/option_margin_left"></ImageView>
            <ImageView
                android:id="@+id/option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/option_1"
                app:layout_constraintLeft_toLeftOf="@id/option_1"
                app:layout_constraintRight_toRightOf="@id/option_1"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginTop="@dimen/option_margin_top"></ImageView>
            <ImageView
                android:id="@+id/option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintLeft_toRightOf="@id/option_1"
                app:layout_constraintBottom_toBottomOf="@id/option_1"
                app:layout_constraintTop_toTopOf="@id/option_1"
                app:layout_constraintRight_toRightOf="@id/tv_question"></ImageView>
            <ImageView
                android:id="@+id/option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toBottomOf="@id/option_2"
                app:layout_constraintLeft_toLeftOf="@id/option_2"
                app:layout_constraintRight_toRightOf="@id/option_2"
                android:layout_marginTop="@dimen/option_margin_top"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>